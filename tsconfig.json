{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "types": [
            "@types/chrome",
            "vite/client"
        ],
        "importHelpers": true,
        "removeComments": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    },
    "include": [
      "*.ts",
      "src/"
    ]
}
